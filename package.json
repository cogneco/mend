{
  "name": "@cogneco/mend",
  "version": "1.5.13",
  "description": "Mend is a utility library for typescript and javascript mending the standard library.",
  "main": "build/index.js",
  "typings": "build/index",
  "scripts": {
    "dev": "watch 'yarn build' .",
    "prebuild": "tslint --config .vscode/tslint.json --project ./tsconfig.json",
    "build": "tsc -p .",
    "test": "jest -c jest.json",
    "test:watch": "watch 'yarn test' source",
    "prepublish": "yarn build",
    "release": "np",
    "clean": "rm -rf build node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cogneco/mend.git"
  },
