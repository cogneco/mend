{
  "name": "@cogneco/mend",
  "version": "1.6.2",
  "description": "Mend is a utility library for typescript and javascript mending the standard library.",
  "main": "build/index.js",
  "typings": "build/index",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "source/tsconfig.test.json"
      }
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "build/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/build/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "dev": "watch 'yarn build' .",
    "prebuild": "tslint --config .vscode/tslint.json --project source/tsconfig.app.json",
    "build": "tsc -p source/tsconfig.app.json",
    "test": "jest",
    "test:watch": "watch jest",
    "prepublish": "yarn build",
    "release": "np",
    "clean": "rm -rf build node_modules coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cogneco/mend.git"
  },
  "author": "Simon Mika (simon@mika.se)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cogneco/mend/issues"
  },
  "homepage": "https://github.com/cogneco/mend#readme",
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "@types/node": "^9.4.7",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "jest": "^23.2.0",
    "np": "^2.20.1",
    "ts-jest": "^23.1.0",
    "tslint": "^5.9.1",
    "typescript": "^3.0.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "async-file": "^2.0.2"
  }
}
