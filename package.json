  "bugs": {
    "url": "https://github.com/cogneco/mend/issues"
  },
  "homepage": "https://github.com/cogneco/mend#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "jest": "^23.5.0",
    "np": "^3.0.4",
    "ts-jest": "^23.1.4",
    "tslint": "^5.9.1",
    "typescript": "^3.0.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "async-file": "^2.0.2"
  }
}
