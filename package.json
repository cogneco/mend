{
  "name": "@cogneco/mend",
  "version": "1.4.0",
  "description": "Mend is a utility library for typescript and javascript mending the standard library.",
  "main": "build/index.js",
  "typings": "build/index",
  "scripts": {
    "dev": "watch 'npm run build' source",
    "prebuild": "tslint --config .vscode/tslint.json --project source/tsconfig.json",
    "build": "tsc -p source",
    "pretest": "npm run build",
    "test": "node build/index.test.js",
    "test:watch": "watch 'npm test' source",
    "prepublish": "npm run build",
    "release": "np",
    "clean": "rm -rf build node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cogneco/mend.git"
  },
  "author": "Simon Mika (simon@mika.se)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cogneco/mend/issues"
  },
  "homepage": "https://github.com/cogneco/mend#readme",
  "devDependencies": {
    "@types/node": "^7.0.12",
    "np": "^2.13.1",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "watch": "^1.0.2"
  }
}
